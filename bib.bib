	author = {Belmonte, Adam and Ts. Sankey, Temuulen and Biederman, Joel and Bradford, John B. and Kolb, Thomas},
	date = {2022},
	note = {Publisher: John Wiley and Sons Ltd},
	keywords = {Drought, Forest Restoration, Remote Sensing, Soil Moisture},
