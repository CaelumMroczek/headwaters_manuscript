	date = {2016-06-15},
	langid = {english},
	note = {Section: Journal of Climate},
	file = {Full Text PDF:/Users/caelum/Zotero/storage/MR5DFS37/Newman et al. - 2016 - The Pacific Decadal Oscillation, Revisited.pdf:application/pdf},
}

@article{brinkerhoff_importance_2024,
