	author = {Springer, Abraham E. and Wright, Julie M. and Shafroth, Patrick B. and Stromberg, Juliet C. and Patten, Duncan T.},
	date = {1999},
	file = {PDF:/Users/caelum/Zotero/storage/UALRGPX7/Springer_A_etal_1999_Coupling_groundwater_riparian.pdf:application/pdf},
